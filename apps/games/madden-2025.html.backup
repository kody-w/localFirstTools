<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Madden 2025 - Experience Football</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            color: #fff;
            overflow: hidden;
        }

        #game-container {
            width: 100vw;
            height: 100vh;
            position: relative;
        }

        #canvas-container {
            width: 100%;
            height: 100%;
        }

        .cover-screen {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #c41e3a 0%, #013369 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            animation: fadeIn 1s ease-in;
        }

        .cover-screen.hidden {
            display: none;
        }

        .cover-title {
            font-size: 6rem;
            font-weight: bold;
            text-shadow: 4px 4px 8px rgba(0,0,0,0.8);
            margin-bottom: 2rem;
            letter-spacing: 0.2rem;
        }

        .cover-player {
            font-size: 3rem;
            color: #FFD700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
            margin-bottom: 3rem;
        }

        .start-button {
            padding: 1.5rem 4rem;
            font-size: 1.5rem;
            background: #FFD700;
            color: #013369;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0,0,0,0.4);
            transition: all 0.3s ease;
        }

        .start-button:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0,0,0,0.6);
        }

        .hud {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            padding: 1rem;
            background: rgba(0,0,0,0.7);
            z-index: 100;
        }

        .hud-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .score-board {
            display: flex;
            gap: 3rem;
            font-size: 1.5rem;
        }

        .team-score {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .team-name {
            font-weight: bold;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .score {
            font-size: 2.5rem;
            font-weight: bold;
            color: #FFD700;
        }

        .game-info {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .quarter {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .down-distance {
            font-size: 1rem;
        }

        .clock {
            font-size: 1.5rem;
            color: #FFD700;
        }

        .controls {
            position: absolute;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0,0,0,0.8);
            padding: 1.5rem;
            border-radius: 10px;
            z-index: 100;
        }

        .control-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .control-btn {
            padding: 1rem 2rem;
            font-size: 1rem;
            background: #c41e3a;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.2s ease;
        }

        .control-btn:hover {
            background: #013369;
            transform: scale(1.05);
        }

        .control-btn:disabled {
            background: #666;
            cursor: not-allowed;
            opacity: 0.5;
        }

        .play-call-modal {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.95);
            padding: 2rem;
            border-radius: 15px;
            border: 2px solid #FFD700;
            z-index: 200;
            min-width: 600px;
            max-width: 800px;
            display: none;
        }

        .play-call-modal.active {
            display: block;
        }

        .modal-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            text-align: center;
            color: #FFD700;
        }

        .play-categories {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .category-btn {
            padding: 1rem;
            background: #013369;
            color: #fff;
            border: 2px solid #FFD700;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: bold;
            transition: all 0.2s ease;
        }

        .category-btn:hover, .category-btn.active {
            background: #FFD700;
            color: #013369;
        }

        .plays-list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem;
            max-height: 300px;
            overflow-y: auto;
            margin-bottom: 1rem;
        }

        .play-btn {
            padding: 0.8rem;
            background: #c41e3a;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            text-align: left;
        }

        .play-btn:hover {
            background: #013369;
            transform: translateX(5px);
        }

        .team-select-modal {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.95);
            padding: 2rem;
            border-radius: 15px;
            border: 2px solid #FFD700;
            z-index: 300;
            min-width: 800px;
            max-width: 90vw;
            max-height: 90vh;
            overflow-y: auto;
            display: none;
        }

        .team-select-modal.active {
            display: block;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1rem;
            margin: 1rem 0;
        }

        .team-card {
            padding: 1rem;
            background: linear-gradient(135deg, #013369 0%, #c41e3a 100%);
            border: 2px solid #FFD700;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }

        .team-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

        .team-card.selected {
            border: 4px solid #FFD700;
            box-shadow: 0 0 30px rgba(255, 215, 0, 0.8);
        }

        .team-card-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .team-card-city {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .save-load-panel {
            position: absolute;
            top: 1rem;
            right: 1rem;
            z-index: 150;
            display: flex;
            gap: 0.5rem;
        }

        .save-btn, .load-btn {
            padding: 0.5rem 1rem;
            background: #FFD700;
            color: #013369;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .possession-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            background: #FFD700;
            border-radius: 50%;
            margin-left: 0.5rem;
            animation: pulse 1s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }
    </style>
</head>
<body>
    <div id="game-container">
        <!-- Cover Screen -->
        <div class="cover-screen" id="coverScreen">
            <div class="cover-title">MADDEN 25</div>
            <div class="cover-player">MICHAEL VICK</div>
            <button class="start-button" onclick="startGame()">PRESS START</button>
        </div>

        <!-- Team Selection -->
        <div class="team-select-modal" id="teamSelectModal">
            <div class="modal-title">SELECT YOUR TEAMS</div>
            <h3 style="margin-top: 1rem;">Home Team</h3>
            <div class="team-grid" id="homeTeamGrid"></div>
            <h3 style="margin-top: 2rem;">Away Team</h3>
            <div class="team-grid" id="awayTeamGrid"></div>
            <div style="text-align: center; margin-top: 2rem;">
                <button class="control-btn" onclick="confirmTeams()">START GAME</button>
            </div>
        </div>

        <!-- HUD -->
        <div class="hud" id="hud" style="display: none;">
            <div class="hud-top">
                <div class="score-board">
                    <div class="team-score">
                        <div class="team-name" id="awayTeamName">AWAY</div>
                        <div class="score" id="awayScore">0</div>
                    </div>
                    <div class="team-score">
                        <div class="team-name" id="homeTeamName">HOME</div>
                        <div class="score" id="homeScore">0</div>
                    </div>
                </div>
                <div class="game-info">
                    <div class="quarter" id="quarter">Q1</div>
                    <div class="clock" id="clock">15:00</div>
                    <div class="down-distance" id="downDistance">1st & 10</div>
                    <div id="possession"></div>
                </div>
            </div>
        </div>

        <!-- Save/Load Panel -->
        <div class="save-load-panel" id="saveLoadPanel" style="display: none;">
            <button class="save-btn" onclick="saveGame()">SAVE</button>
            <button class="load-btn" onclick="loadGame()">LOAD</button>
        </div>

        <!-- Play Call Modal -->
        <div class="play-call-modal" id="playCallModal">
            <div class="modal-title">CALL YOUR PLAY</div>
            <div class="play-categories" id="playCategories"></div>
            <div class="plays-list" id="playsList"></div>
        </div>

        <!-- Controls -->
        <div class="controls" id="controls" style="display: none;">
            <div style="text-align: center; margin-bottom: 0.5rem;">
                <strong id="currentAction">Ready for kickoff</strong>
            </div>
            <div class="control-buttons">
                <button class="control-btn" id="snapBtn" onclick="snapBall()">SNAP</button>
                <button class="control-btn" id="playcallBtn" onclick="showPlayCall()">CALL PLAY</button>
                <button class="control-btn" onclick="togglePause()">PAUSE</button>
            </div>
        </div>

        <!-- 3D Canvas -->
        <div id="canvas-container"></div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // ==================== GAME DATA ====================

        const NFL_TEAMS = {
            'ARI': { name: 'Cardinals', city: 'Arizona', colors: ['#97233F', '#000000', '#FFB612'] },
            'ATL': { name: 'Falcons', city: 'Atlanta', colors: ['#A71930', '#000000', '#A5ACAF'] },
            'BAL': { name: 'Ravens', city: 'Baltimore', colors: ['#241773', '#000000', '#9E7C0C'] },
            'BUF': { name: 'Bills', city: 'Buffalo', colors: ['#00338D', '#C60C30'] },
            'CAR': { name: 'Panthers', city: 'Carolina', colors: ['#0085CA', '#101820', '#BFC0BF'] },
            'CHI': { name: 'Bears', city: 'Chicago', colors: ['#0B162A', '#C83803'] },
            'CIN': { name: 'Bengals', city: 'Cincinnati', colors: ['#FB4F14', '#000000'] },
            'CLE': { name: 'Browns', city: 'Cleveland', colors: ['#311D00', '#FF3C00'] },
            'DAL': { name: 'Cowboys', city: 'Dallas', colors: ['#041E42', '#869397', '#FFFFFF'] },
            'DEN': { name: 'Broncos', city: 'Denver', colors: ['#FB4F14', '#002244'] },
            'DET': { name: 'Lions', city: 'Detroit', colors: ['#0076B6', '#B0B7BC', '#000000'] },
            'GB': { name: 'Packers', city: 'Green Bay', colors: ['#203731', '#FFB612'] },
            'HOU': { name: 'Texans', city: 'Houston', colors: ['#03202F', '#A71930'] },
            'IND': { name: 'Colts', city: 'Indianapolis', colors: ['#002C5F', '#A2AAAD'] },
            'JAX': { name: 'Jaguars', city: 'Jacksonville', colors: ['#006778', '#D7A22A', '#000000'] },
            'KC': { name: 'Chiefs', city: 'Kansas City', colors: ['#E31837', '#FFB81C'] },
            'LV': { name: 'Raiders', city: 'Las Vegas', colors: ['#000000', '#A5ACAF'] },
            'LAC': { name: 'Chargers', city: 'LA', colors: ['#0080C6', '#FFC20E'] },
            'LAR': { name: 'Rams', city: 'LA', colors: ['#003594', '#FFA300', '#FF8200'] },
            'MIA': { name: 'Dolphins', city: 'Miami', colors: ['#008E97', '#FC4C02', '#005778'] },
            'MIN': { name: 'Vikings', city: 'Minnesota', colors: ['#4F2683', '#FFC62F'] },
            'NE': { name: 'Patriots', city: 'New England', colors: ['#002244', '#C60C30', '#B0B7BC'] },
            'NO': { name: 'Saints', city: 'New Orleans', colors: ['#D3BC8D', '#101820'] },
            'NYG': { name: 'Giants', city: 'NY', colors: ['#0B2265', '#A71930', '#A5ACAF'] },
            'NYJ': { name: 'Jets', city: 'NY', colors: ['#125740', '#000000', '#FFFFFF'] },
            'PHI': { name: 'Eagles', city: 'Philadelphia', colors: ['#004C54', '#A5ACAF', '#ACC0C6'] },
            'PIT': { name: 'Steelers', city: 'Pittsburgh', colors: ['#FFB612', '#101820'] },
            'SF': { name: '49ers', city: 'San Francisco', colors: ['#AA0000', '#B3995D'] },
            'SEA': { name: 'Seahawks', city: 'Seattle', colors: ['#002244', '#69BE28', '#A5ACAF'] },
            'TB': { name: 'Buccaneers', city: 'Tampa Bay', colors: ['#D50A0A', '#FF7900', '#0A0A08'] },
            'TEN': { name: 'Titans', city: 'Tennessee', colors: ['#0C2340', '#4B92DB', '#C8102E'] },
            'WAS': { name: 'Commanders', city: 'Washington', colors: ['#5A1414', '#FFB612'] }
        };

        const PLAYBOOK = {
            'Run': [
                'HB Dive', 'HB Off Tackle', 'HB Stretch', 'HB Toss', 'HB Counter',
                'FB Dive', 'Power O', 'Zone Read', 'Draw', 'QB Sneak'
            ],
            'Short Pass': [
                'Slants', 'Quick Outs', 'Screen Pass', 'Flats', 'Drag Route',
                'Hitch Routes', 'Bubble Screen', 'RB Swing', 'TE Flat', 'WR Screen'
            ],
            'Medium Pass': [
                'Curl Routes', 'Dig Route', 'Comeback', 'In Routes', 'Out Routes',
                'Post Corner', 'Stick Concept', 'Levels Concept', 'Mesh Concept', 'Smash'
            ],
            'Deep Pass': [
                'Four Verticals', 'Post Route', 'Corner Route', 'Fly Route', 'Seam Route',
                'Wheel Route', 'Sluggo', 'Double Move', 'Sail Concept', 'Flood Concept'
            ],
            'Special': [
                'Play Action', 'RPO', 'Fake FG Pass', 'Wildcat', 'Flea Flicker',
                'Reverse', 'Trick Play', 'QB Draw', 'Bootleg', 'Shovel Pass'
            ]
        };

        // Sample rosters for teams
        function generateRoster(teamCode) {
            const positions = {
                'QB': ['Elite', 'Backup'],
                'RB': ['Featured Back', 'Power Back', 'Speed Back'],
                'WR': ['WR1', 'WR2', 'WR3', 'Slot'],
                'TE': ['TE1', 'TE2'],
                'OL': ['LT', 'LG', 'C', 'RG', 'RT'],
                'DL': ['DE1', 'DE2', 'DT1', 'DT2'],
                'LB': ['MLB', 'OLB1', 'OLB2'],
                'DB': ['CB1', 'CB2', 'SS', 'FS'],
                'K': ['Kicker'],
                'P': ['Punter']
            };

            const roster = {};
            for (const [pos, roles] of Object.entries(positions)) {
                roster[pos] = roles.map((role, idx) => ({
                    name: `${role} #${Math.floor(Math.random() * 99) + 1}`,
                    overall: Math.floor(Math.random() * 30) + 70,
                    speed: Math.floor(Math.random() * 30) + 70,
                    strength: Math.floor(Math.random() * 30) + 70,
                    awareness: Math.floor(Math.random() * 30) + 70
                }));
            }

            // Add special players for certain teams
            if (teamCode === 'ATL') {
                roster.QB[0] = { name: 'Michael Vick #7', overall: 99, speed: 99, strength: 85, awareness: 92 };
            }

            return roster;
        }

        // ==================== GAME STATE ====================

        let gameState = {
            homeTeam: null,
            awayTeam: null,
            homeScore: 0,
            awayScore: 0,
            quarter: 1,
            clockMinutes: 15,
            clockSeconds: 0,
            possession: 'home',
            down: 1,
            distance: 10,
            yardLine: 25,
            ballCarrier: null,
            selectedPlay: null,
            gameStarted: false,
            isPaused: false,
            lastPlay: '',
            driveStartYard: 25
        };

        let scene, camera, renderer, field, players = [];
        let animationId;

        // ==================== INITIALIZATION ====================

        function startGame() {
            document.getElementById('coverScreen').classList.add('hidden');
            document.getElementById('teamSelectModal').classList.add('active');
            populateTeamGrids();
        }

        function populateTeamGrids() {
            const homeGrid = document.getElementById('homeTeamGrid');
            const awayGrid = document.getElementById('awayTeamGrid');

            for (const [code, team] of Object.entries(NFL_TEAMS)) {
                const homeCard = createTeamCard(code, team, 'home');
                const awayCard = createTeamCard(code, team, 'away');
                homeGrid.appendChild(homeCard);
                awayGrid.appendChild(awayCard);
            }
        }

        function createTeamCard(code, team, type) {
            const card = document.createElement('div');
            card.className = 'team-card';
            card.innerHTML = `
                <div class="team-card-city">${team.city}</div>
                <div class="team-card-name">${team.name}</div>
            `;
            card.onclick = () => selectTeam(code, type, card);
            return card;
        }

        let selectedHomeTeam = null;
        let selectedAwayTeam = null;
        let selectedHomeCard = null;
        let selectedAwayCard = null;

        function selectTeam(code, type, card) {
            if (type === 'home') {
                if (selectedHomeCard) selectedHomeCard.classList.remove('selected');
                selectedHomeTeam = code;
                selectedHomeCard = card;
                card.classList.add('selected');
            } else {
                if (selectedAwayCard) selectedAwayCard.classList.remove('selected');
                selectedAwayTeam = code;
                selectedAwayCard = card;
                card.classList.add('selected');
            }
        }

        function confirmTeams() {
            if (!selectedHomeTeam || !selectedAwayTeam) {
                alert('Please select both teams!');
                return;
            }

            if (selectedHomeTeam === selectedAwayTeam) {
                alert('Please select different teams!');
                return;
            }

            gameState.homeTeam = {
                code: selectedHomeTeam,
                ...NFL_TEAMS[selectedHomeTeam],
                roster: generateRoster(selectedHomeTeam)
            };

            gameState.awayTeam = {
                code: selectedAwayTeam,
                ...NFL_TEAMS[selectedAwayTeam],
                roster: generateRoster(selectedAwayTeam)
            };

            document.getElementById('teamSelectModal').classList.remove('active');
            initGame();
        }

        function initGame() {
            gameState.gameStarted = true;

            // Update HUD
            document.getElementById('hud').style.display = 'block';
            document.getElementById('controls').style.display = 'block';
            document.getElementById('saveLoadPanel').style.display = 'flex';

            document.getElementById('homeTeamName').textContent = `${gameState.homeTeam.city} ${gameState.homeTeam.name}`;
            document.getElementById('awayTeamName').textContent = `${gameState.awayTeam.city} ${gameState.awayTeam.name}`;

            updateHUD();
            init3DScene();
            setupPlayCall();
            startGameClock();
        }

        // ==================== 3D SCENE ====================

        function init3DScene() {
            const container = document.getElementById('canvas-container');

            // Scene
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x2d5016);
            scene.fog = new THREE.Fog(0x2d5016, 50, 200);

            // Camera
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 30, 40);
            camera.lookAt(0, 0, 0);

            // Renderer
            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.shadowMap.enabled = true;
            container.appendChild(renderer.domElement);

            // Lights
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);

            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(50, 50, 50);
            directionalLight.castShadow = true;
            scene.add(directionalLight);

            // Stadium lights
            const stadiumLight1 = new THREE.PointLight(0xffffee, 1, 100);
            stadiumLight1.position.set(-30, 40, 0);
            scene.add(stadiumLight1);

            const stadiumLight2 = new THREE.PointLight(0xffffee, 1, 100);
            stadiumLight2.position.set(30, 40, 0);
            scene.add(stadiumLight2);

            // Create field
            createField();

            // Create players
            createPlayers();

            // Handle window resize
            window.addEventListener('resize', onWindowResize, false);

            // Animation loop
            animate();
        }

        function createField() {
            // Main field
            const fieldGeometry = new THREE.PlaneGeometry(53.33, 120);
            const fieldMaterial = new THREE.MeshStandardMaterial({
                color: 0x2d5016,
                roughness: 0.8
            });
            field = new THREE.Mesh(fieldGeometry, fieldMaterial);
            field.rotation.x = -Math.PI / 2;
            field.receiveShadow = true;
            scene.add(field);

            // Field stripes
            for (let i = 0; i < 120; i += 10) {
                const stripeGeometry = new THREE.PlaneGeometry(53.33, 5);
                const stripeMaterial = new THREE.MeshStandardMaterial({
                    color: i % 20 === 0 ? 0x1a4009 : 0x2d5016,
                    roughness: 0.8
                });
                const stripe = new THREE.Mesh(stripeGeometry, stripeMaterial);
                stripe.rotation.x = -Math.PI / 2;
                stripe.position.z = i - 60;
                stripe.position.y = 0.01;
                stripe.receiveShadow = true;
                scene.add(stripe);
            }

            // Yard lines
            for (let i = -50; i <= 50; i += 10) {
                const lineGeometry = new THREE.PlaneGeometry(53.33, 0.3);
                const lineMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });
                const line = new THREE.Mesh(lineGeometry, lineMaterial);
                line.rotation.x = -Math.PI / 2;
                line.position.z = i;
                line.position.y = 0.02;
                scene.add(line);

                // Yard numbers
                if (i !== 0 && i !== -50 && i !== 50) {
                    const yardNum = Math.abs(i) <= 50 ? Math.abs(i) : 100 - Math.abs(i);
                    // Would add text here with TextGeometry in full implementation
                }
            }

            // End zones
            const endZone1Geometry = new THREE.PlaneGeometry(53.33, 10);
            const endZone1Material = new THREE.MeshStandardMaterial({
                color: parseInt(gameState.homeTeam.colors[0].replace('#', '0x'))
            });
            const endZone1 = new THREE.Mesh(endZone1Geometry, endZone1Material);
            endZone1.rotation.x = -Math.PI / 2;
            endZone1.position.z = -65;
            endZone1.position.y = 0.01;
            scene.add(endZone1);

            const endZone2Geometry = new THREE.PlaneGeometry(53.33, 10);
            const endZone2Material = new THREE.MeshStandardMaterial({
                color: parseInt(gameState.awayTeam.colors[0].replace('#', '0x'))
            });
            const endZone2 = new THREE.Mesh(endZone2Geometry, endZone2Material);
            endZone2.rotation.x = -Math.PI / 2;
            endZone2.position.z = 65;
            endZone2.position.y = 0.01;
            scene.add(endZone2);

            // Goalposts
            createGoalpost(-70);
            createGoalpost(70);

            // Sidelines
            createSidelines();
        }

        function createGoalpost(zPosition) {
            const postMaterial = new THREE.MeshStandardMaterial({ color: 0xFFD700 });

            // Left upright
            const uprightGeometry = new THREE.CylinderGeometry(0.2, 0.2, 20);
            const leftUpright = new THREE.Mesh(uprightGeometry, postMaterial);
            leftUpright.position.set(-9, 10, zPosition);
            scene.add(leftUpright);

            const rightUpright = new THREE.Mesh(uprightGeometry, postMaterial);
            rightUpright.position.set(9, 10, zPosition);
            scene.add(rightUpright);

            // Crossbar
            const crossbarGeometry = new THREE.CylinderGeometry(0.2, 0.2, 18);
            const crossbar = new THREE.Mesh(crossbarGeometry, postMaterial);
            crossbar.rotation.z = Math.PI / 2;
            crossbar.position.set(0, 10, zPosition);
            scene.add(crossbar);
        }

        function createSidelines() {
            const sidelineMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });

            // Left sideline
            const sideline1 = new THREE.Mesh(
                new THREE.PlaneGeometry(0.3, 120),
                sidelineMaterial
            );
            sideline1.rotation.x = -Math.PI / 2;
            sideline1.position.x = -26.65;
            sideline1.position.y = 0.02;
            scene.add(sideline1);

            // Right sideline
            const sideline2 = new THREE.Mesh(
                new THREE.PlaneGeometry(0.3, 120),
                sidelineMaterial
            );
            sideline2.rotation.x = -Math.PI / 2;
            sideline2.position.x = 26.65;
            sideline2.position.y = 0.02;
            scene.add(sideline2);
        }

        function createPlayers() {
            const homeTeamColor = parseInt(gameState.homeTeam.colors[0].replace('#', '0x'));
            const awayTeamColor = parseInt(gameState.awayTeam.colors[0].replace('#', '0x'));

            // Offense (11 players)
            const offensePositions = [
                [0, 0], // QB
                [-3, -2], // RB
                [-15, 0], [-12, 0], [-3, 0], [3, 0], [12, 0], // O-Line
                [-20, 5], [-8, 10], [8, 10], [20, 5] // WRs and TE
            ];

            offensePositions.forEach((pos, i) => {
                const player = createPlayer(homeTeamColor, pos[0], pos[1]);
                players.push(player);
            });

            // Defense (11 players)
            const defensePositions = [
                [-15, 8], [-5, 8], [5, 8], [15, 8], // D-Line
                [-8, 15], [0, 15], [8, 15], // LBs
                [-20, 25], [-10, 30], [10, 30], [20, 25] // DBs
            ];

            defensePositions.forEach((pos, i) => {
                const player = createPlayer(awayTeamColor, pos[0], pos[1]);
                players.push(player);
            });
        }

        function createPlayer(color, x, z) {
            const group = new THREE.Group();

            // Body
            const bodyGeometry = new THREE.CylinderGeometry(0.5, 0.5, 2);
            const bodyMaterial = new THREE.MeshStandardMaterial({ color: color });
            const body = new THREE.Mesh(bodyGeometry, bodyMaterial);
            body.position.y = 1;
            body.castShadow = true;
            group.add(body);

            // Helmet
            const helmetGeometry = new THREE.SphereGeometry(0.6, 16, 16);
            const helmetMaterial = new THREE.MeshStandardMaterial({
                color: color,
                metalness: 0.6,
                roughness: 0.4
            });
            const helmet = new THREE.Mesh(helmetGeometry, helmetMaterial);
            helmet.position.y = 2.5;
            helmet.castShadow = true;
            group.add(helmet);

            // Number indicator
            const numberGeometry = new THREE.SphereGeometry(0.2, 8, 8);
            const numberMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });
            const number = new THREE.Mesh(numberGeometry, numberMaterial);
            number.position.set(0, 1, 0.6);
            group.add(number);

            group.position.set(x, 0, z);
            scene.add(group);

            return group;
        }

        function animate() {
            animationId = requestAnimationFrame(animate);

            // Simple camera rotation for dramatic effect
            if (!gameState.isPaused) {
                camera.position.x = Math.sin(Date.now() * 0.0001) * 5;
            }

            renderer.render(scene, camera);
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        // ==================== GAME LOGIC ====================

        function updateHUD() {
            document.getElementById('homeScore').textContent = gameState.homeScore;
            document.getElementById('awayScore').textContent = gameState.awayScore;
            document.getElementById('quarter').textContent = `Q${gameState.quarter}`;

            const mins = String(gameState.clockMinutes).padStart(2, '0');
            const secs = String(gameState.clockSeconds).padStart(2, '0');
            document.getElementById('clock').textContent = `${mins}:${secs}`;

            document.getElementById('downDistance').textContent =
                `${getDownText(gameState.down)} & ${gameState.distance}`;

            const possessionTeam = gameState.possession === 'home' ? gameState.homeTeam : gameState.awayTeam;
            document.getElementById('possession').innerHTML =
                `<span>${possessionTeam.city} ${possessionTeam.name} has possession</span><span class="possession-indicator"></span>`;
        }

        function getDownText(down) {
            const suffixes = ['st', 'nd', 'rd', 'th'];
            return down + (suffixes[down - 1] || 'th');
        }

        function startGameClock() {
            setInterval(() => {
                if (!gameState.isPaused && gameState.gameStarted) {
                    if (gameState.clockSeconds === 0) {
                        if (gameState.clockMinutes === 0) {
                            endQuarter();
                        } else {
                            gameState.clockMinutes--;
                            gameState.clockSeconds = 59;
                        }
                    } else {
                        gameState.clockSeconds--;
                    }
                    updateHUD();
                }
            }, 1000);
        }

        function endQuarter() {
            if (gameState.quarter < 4) {
                gameState.quarter++;
                gameState.clockMinutes = 15;
                gameState.clockSeconds = 0;
                alert(`End of Quarter ${gameState.quarter - 1}`);
            } else {
                endGame();
            }
        }

        function endGame() {
            gameState.isPaused = true;
            const winner = gameState.homeScore > gameState.awayScore ?
                `${gameState.homeTeam.city} ${gameState.homeTeam.name}` :
                gameState.awayScore > gameState.homeScore ?
                `${gameState.awayTeam.city} ${gameState.awayTeam.name}` :
                'TIE';

            alert(`FINAL SCORE\n${gameState.homeTeam.city} ${gameState.homeTeam.name}: ${gameState.homeScore}\n${gameState.awayTeam.city} ${gameState.awayTeam.name}: ${gameState.awayScore}\n\nWinner: ${winner}`);
        }

        // ==================== PLAY CALLING ====================

        function setupPlayCall() {
            const categoriesDiv = document.getElementById('playCategories');

            Object.keys(PLAYBOOK).forEach(category => {
                const btn = document.createElement('button');
                btn.className = 'category-btn';
                btn.textContent = category;
                btn.onclick = () => showPlaysInCategory(category, btn);
                categoriesDiv.appendChild(btn);
            });
        }

        function showPlayCall() {
            document.getElementById('playCallModal').classList.add('active');
        }

        function showPlaysInCategory(category, button) {
            // Highlight selected category
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            button.classList.add('active');

            // Show plays
            const playsList = document.getElementById('playsList');
            playsList.innerHTML = '';

            PLAYBOOK[category].forEach(play => {
                const playBtn = document.createElement('button');
                playBtn.className = 'play-btn';
                playBtn.textContent = play;
                playBtn.onclick = () => selectPlay(play, category);
                playsList.appendChild(playBtn);
            });
        }

        function selectPlay(play, category) {
            gameState.selectedPlay = { name: play, category: category };
            document.getElementById('playCallModal').classList.remove('active');
            document.getElementById('currentAction').textContent = `Play called: ${play}`;
            document.getElementById('snapBtn').disabled = false;
        }

        function snapBall() {
            if (!gameState.selectedPlay) {
                alert('Call a play first!');
                return;
            }

            document.getElementById('snapBtn').disabled = true;
            document.getElementById('currentAction').textContent = 'Play in progress...';

            // Simulate play outcome
            setTimeout(() => {
                executePlay();
            }, 2000);
        }

        function executePlay() {
            const play = gameState.selectedPlay;
            let yards = 0;
            let outcome = '';

            // Simulate play based on category
            if (play.category === 'Run') {
                yards = Math.floor(Math.random() * 15) - 2;
                outcome = yards > 0 ? `${play.name} for ${yards} yards` :
                         yards < 0 ? `${play.name} for a loss of ${Math.abs(yards)} yards` :
                         `${play.name} - no gain`;
            } else if (play.category === 'Short Pass') {
                const complete = Math.random() > 0.3;
                if (complete) {
                    yards = Math.floor(Math.random() * 12) + 3;
                    outcome = `${play.name} - COMPLETE for ${yards} yards`;
                } else {
                    outcome = `${play.name} - INCOMPLETE`;
                }
            } else if (play.category === 'Medium Pass') {
                const complete = Math.random() > 0.5;
                if (complete) {
                    yards = Math.floor(Math.random() * 15) + 10;
                    outcome = `${play.name} - COMPLETE for ${yards} yards`;
                } else {
                    outcome = `${play.name} - INCOMPLETE`;
                }
            } else if (play.category === 'Deep Pass') {
                const complete = Math.random() > 0.7;
                if (complete) {
                    yards = Math.floor(Math.random() * 30) + 20;
                    if (Math.random() > 0.9) {
                        yards = 100 - gameState.yardLine; // Touchdown
                    }
                    outcome = `${play.name} - COMPLETE for ${yards} yards`;
                } else {
                    outcome = `${play.name} - INCOMPLETE`;
                }
            } else {
                yards = Math.floor(Math.random() * 25) - 5;
                outcome = `${play.name} for ${yards} yards`;
            }

            // Check for big plays
            if (yards > 20) outcome += ' - BIG GAIN!';
            if (Math.random() > 0.95) {
                outcome += ' - FUMBLE!';
                changePossession();
                gameState.down = 1;
                gameState.distance = 10;
                updateHUD();
                document.getElementById('currentAction').textContent = outcome;
                gameState.selectedPlay = null;
                return;
            }

            // Update field position
            gameState.yardLine += yards;

            // Check for touchdown
            if (gameState.yardLine >= 100) {
                scoreTouchdown();
                outcome += ' - TOUCHDOWN!!!';
            } else if (gameState.yardLine <= 0) {
                // Safety
                const opposingTeam = gameState.possession === 'home' ? 'awayScore' : 'homeScore';
                gameState[opposingTeam] += 2;
                outcome += ' - SAFETY!';
                changePossession();
                gameState.yardLine = 25;
                gameState.down = 1;
                gameState.distance = 10;
            } else {
                // Normal down progression
                gameState.distance -= yards;

                if (gameState.distance <= 0) {
                    // First down
                    gameState.down = 1;
                    gameState.distance = 10;
                    outcome += ' - FIRST DOWN!';
                } else {
                    gameState.down++;
                    if (gameState.down > 4) {
                        // Turnover on downs
                        outcome += ' - TURNOVER ON DOWNS';
                        changePossession();
                        gameState.down = 1;
                        gameState.distance = 10;
                    }
                }
            }

            gameState.lastPlay = outcome;
            document.getElementById('currentAction').textContent = outcome;
            updateHUD();

            gameState.selectedPlay = null;
            setTimeout(() => {
                document.getElementById('snapBtn').disabled = false;
                document.getElementById('currentAction').textContent = 'Ready to snap';
            }, 3000);
        }

        function scoreTouchdown() {
            const scoringTeam = gameState.possession === 'home' ? 'homeScore' : 'awayScore';
            gameState[scoringTeam] += 6;

            // Extra point (automatic for now)
            setTimeout(() => {
                if (Math.random() > 0.1) {
                    gameState[scoringTeam] += 1;
                    alert('Extra point is GOOD!');
                } else {
                    alert('Extra point is NO GOOD!');
                }
                updateHUD();
                kickoff();
            }, 2000);
        }

        function changePossession() {
            gameState.possession = gameState.possession === 'home' ? 'away' : 'home';
        }

        function kickoff() {
            changePossession();
            gameState.yardLine = 25;
            gameState.down = 1;
            gameState.distance = 10;
            gameState.driveStartYard = 25;
            updateHUD();
        }

        function togglePause() {
            gameState.isPaused = !gameState.isPaused;
            document.getElementById('currentAction').textContent =
                gameState.isPaused ? 'PAUSED' : 'Ready to snap';
        }

        // ==================== SAVE/LOAD ====================

        function saveGame() {
            const saveData = {
                gameState: gameState,
                timestamp: new Date().toISOString()
            };

            const dataStr = JSON.stringify(saveData, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);

            const link = document.createElement('a');
            link.href = url;
            link.download = `madden-save-${Date.now()}.json`;
            link.click();

            URL.revokeObjectURL(url);
            alert('Game saved! Check your downloads folder.');
        }

        function loadGame() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';

            input.onchange = (e) => {
                const file = e.target.files[0];
                const reader = new FileReader();

                reader.onload = (event) => {
                    try {
                        const saveData = JSON.parse(event.target.result);

                        // Restore game state
                        Object.assign(gameState, saveData.gameState);

                        // Update UI
                        updateHUD();

                        alert(`Game loaded from ${new Date(saveData.timestamp).toLocaleString()}`);
                    } catch (error) {
                        alert('Error loading save file: ' + error.message);
                    }
                };

                reader.readAsText(file);
            };

            input.click();
        }

        // ==================== GAME STARTED ====================

        console.log('%cüèà MADDEN 25 - MICHAEL VICK EDITION üèà', 'font-size: 20px; color: #FFD700; font-weight: bold;');
        console.log('%cAll 32 NFL teams loaded', 'color: #00ff00;');
        console.log('%cFull playbook ready', 'color: #00ff00;');
        console.log('%cSave/Load system active', 'color: #00ff00;');
        console.log('%cPress START to begin!', 'color: #FFD700; font-size: 16px;');
    </script>
