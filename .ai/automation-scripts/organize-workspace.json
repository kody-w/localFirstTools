{
  "id": "organize-workspace",
  "name": "Organize Workspace",
  "description": "Opens commonly used programs and tiles them in an organized layout",
  "version": "1.1.0",
  "author": "data-sloshing-steward",
  "created": "2025-10-14T00:00:00Z",
  "modified": "2025-10-14T19:30:00Z",
  "tags": ["productivity", "workspace", "organization"],
  "triggerMethods": ["button", "keyboard"],
  "keyboardShortcut": "Ctrl+Shift+W",
  "icon": "ðŸŽ¯",
  "category": "productivity",

  "sequence": [
    {
      "step": 1,
      "description": "Notify user",
      "action": "showToast",
      "params": {
        "title": "Workspace Setup",
        "message": "Organizing your workspace..."
      },
      "delay": 200
    },
    {
      "step": 2,
      "description": "Open Notepad for notes",
      "action": "openProgram",
      "params": {
        "programName": "notepad"
      },
      "delay": 250
    },
    {
      "step": 3,
      "description": "Open Calculator",
      "action": "openProgram",
      "params": {
        "programName": "calculator"
      },
      "delay": 250
    },
    {
      "step": 4,
      "description": "Open File Explorer",
      "action": "openProgram",
      "params": {
        "programName": "fileExplorer"
      },
      "delay": 250
    },
    {
      "step": 5,
      "description": "Tile all windows",
      "action": "tileWindows",
      "params": {
        "layout": "grid"
      },
      "delay": 300
    },
    {
      "step": 6,
      "description": "Show completion",
      "action": "showToast",
      "params": {
        "title": "Ready to Work",
        "message": "Workspace organized! ðŸŽ¯"
      }
    }
  ],

  "errorHandling": {
    "defaultBehavior": "continue",
    "retryAttempts": 1,
    "retryDelay": 1000
  },

  "metadata": {
    "executionCount": 0,
    "lastExecuted": null,
    "averageDuration": 0,
    "successRate": 100
  }
}
