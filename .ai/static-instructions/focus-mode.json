{
  "name": "focus-mode",
  "description": "Enter focus mode: Minimize distractions, tile windows, create focus timer",
  "version": "1.0.0",
  "author": "system",
  "saveStateAfter": true,
  "steps": [
    {
      "type": "notification",
      "params": {
        "title": "üéØ Focus Mode",
        "message": "Entering deep work mode..."
      },
      "delay": 500
    },
    {
      "type": "minimizeAll",
      "params": {},
      "description": "Clear all windows"
    },
    {
      "type": "openProgram",
      "params": {
        "program": "Notepad"
      },
      "delay": 300
    },
    {
      "type": "createWindow",
      "params": {
        "title": "‚è±Ô∏è Focus Timer",
        "content": "<div style=\"padding: 30px; text-align: center; font-family: 'MS Sans Serif';\"><div style=\"font-size: 48px; font-weight: bold; color: #000088; margin-bottom: 20px;\" id=\"focus-timer\">25:00</div><p style=\"font-size: 14px; color: #666;\">Pomodoro Timer</p><button onclick=\"startFocusTimer()\" style=\"padding: 10px 20px; margin: 10px; font-size: 14px;\">Start</button><button onclick=\"resetFocusTimer()\" style=\"padding: 10px 20px; margin: 10px; font-size: 14px;\">Reset</button><script>let focusTime=1500;let focusInterval;function startFocusTimer(){clearInterval(focusInterval);focusInterval=setInterval(()=>{focusTime--;const mins=Math.floor(focusTime/60);const secs=focusTime%60;document.getElementById('focus-timer').textContent=mins+':'+(secs<10?'0':'')+secs;if(focusTime<=0){clearInterval(focusInterval);alert('Focus session complete! Take a break.');focusTime=1500;}},1000);}function resetFocusTimer(){clearInterval(focusInterval);focusTime=1500;document.getElementById('focus-timer').textContent='25:00';}</script></div>",
        "width": 300,
        "height": 250,
        "x": 450,
        "y": 50
      },
      "delay": 300
    },
    {
      "type": "tileWindows",
      "params": {
        "padding": 10
      },
      "delay": 500
    },
    {
      "type": "setTheme",
      "params": {
        "theme": "minimal"
      }
    },
    {
      "type": "playSound",
      "params": {
        "sound": "notify"
      }
    },
    {
      "type": "notification",
      "params": {
        "title": "‚úÖ Focus Mode Active",
        "message": "Distractions minimized. You've got this!"
      }
    }
  ]
}
