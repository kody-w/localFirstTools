{
  "name": "cleanup-workspace",
  "description": "Clean up workspace: Close unnecessary windows, organize icons, cascade remaining windows",
  "version": "1.0.0",
  "author": "system",
  "saveStateAfter": true,
  "steps": [
    {
      "type": "notification",
      "params": {
        "title": "ðŸ§¹ Cleanup",
        "message": "Organizing your workspace..."
      },
      "delay": 500
    },
    {
      "type": "organizeIcons",
      "params": {
        "startX": 20,
        "startY": 20,
        "spacing": 80,
        "columns": 4
      },
      "description": "Organize desktop icons",
      "delay": 500
    },
    {
      "type": "cascadeWindows",
      "params": {
        "startX": 50,
        "startY": 50,
        "offsetX": 30,
        "offsetY": 30
      },
      "description": "Cascade all windows",
      "delay": 500
    },
    {
      "type": "playSound",
      "params": {
        "sound": "notify"
      }
    },
    {
      "type": "notification",
      "params": {
        "title": "âœ¨ All Clean!",
        "message": "Your workspace is organized and ready to go."
      }
    }
  ]
}
