{
  "name": "morning-routine",
  "description": "Automated morning setup: Opens essential programs and organizes workspace",
  "version": "1.0.0",
  "author": "system",
  "schedule": "08:00",
  "saveStateAfter": true,
  "steps": [
    {
      "type": "notification",
      "params": {
        "title": "‚òÄÔ∏è Good Morning!",
        "message": "Setting up your workspace..."
      },
      "delay": 1000
    },
    {
      "type": "minimizeAll",
      "params": {},
      "description": "Clear the workspace"
    },
    {
      "type": "openProgram",
      "params": {
        "program": "Notepad"
      },
      "delay": 500
    },
    {
      "type": "createWindow",
      "params": {
        "title": "üìã Today's Goals",
        "content": "<div style=\"padding: 20px; font-family: 'MS Sans Serif';\"><h2>Today's Goals</h2><ul><li>[ ] Review priorities</li><li>[ ] Complete 3 tasks</li><li>[ ] Clear inbox</li></ul><p style=\"margin-top: 20px; color: #666;\">üí° Tip: Focus on one thing at a time</p></div>",
        "width": 400,
        "height": 300,
        "x": 50,
        "y": 50
      },
      "delay": 500
    },
    {
      "type": "organizeIcons",
      "params": {
        "startX": 20,
        "startY": 20,
        "spacing": 80,
        "columns": 4
      },
      "delay": 500
    },
    {
      "type": "playSound",
      "params": {
        "sound": "start"
      }
    },
    {
      "type": "notification",
      "params": {
        "title": "‚úÖ Ready!",
        "message": "Your workspace is ready. Have a productive day!"
      }
    }
  ]
}
