  "parsingRules": {
    "description": "Rules for parsing natural language commands",
    "rules": [
      {
        "name": "Ignore filler words",
        "fillerWords": ["please", "can you", "could you", "would you", "i want to", "i need to", "go ahead and", "let me", "help me"],
        "example": "can you please open notepad -> open notepad"
      },
      {
        "name": "Case insensitive",
        "note": "All matching is case-insensitive"
      },
      {
        "name": "Fuzzy matching",
        "tolerance": 0.8,
        "note": "Allow minor typos and variations"
      },
      {
        "name": "Multi-word programs",
        "note": "Handle programs with multiple words like 'internet explorer'"
      },
      {
        "name": "Partial matches",
        "note": "Allow partial matches for unambiguous commands",
        "example": "open note -> matches open notepad if unambiguous"
      }
    ]
  },

  "executionFlow": {
    "description": "How commands are processed and executed",
    "steps": [
      "1. User types text command",
      "2. CommandParser normalizes input (lowercase, remove fillers)",
      "3. Parser matches against patterns (exact ‚Üí fuzzy ‚Üí partial)",
      "4. If match found, execute mapped action",
      "5. Show response notification",
      "6. Log command for learning",
      "7. If no match, fall back to AI or show suggestions"
    ]
  },

  "extensibility": {
    "description": "How users/AI can extend command mappings",
    "methods": [
      "Add custom commands to user-commands.json",
      "AI can learn new patterns from usage",
      "Commands can be chained with 'then' or 'and'",
      "Variables supported: 'open {program}' where program is variable"
    ]
  },

