  "animations": {
    "idle": {
      "type": "sway",
      "amplitude": 0.1,
      "speed": 1.5,
      "parts": {
        "torso": { "rotateZ": { "amplitude": 0.03, "speed": 1.2 } },
        "head": { "rotateY": { "amplitude": 0.15, "speed": 0.5 } },
        "leftArm": { "rotateZ": { "amplitude": 0.05, "speed": 1.5, "phase": 0 } },
        "rightArm": { "rotateZ": { "amplitude": 0.05, "speed": 1.5, "phase": 3.14 } }
      }
    },
    "walk": {
      "type": "bob",
      "amplitude": 0.2,
      "speed": 3.0,
      "parts": {
        "leftLeg": { "rotateX": { "amplitude": 0.6, "phaseOffset": 0 } },
        "rightLeg": { "rotateX": { "amplitude": 0.6, "phaseOffset": 3.14 } },
        "leftArm": { "rotateX": { "amplitude": 0.3, "phaseOffset": 3.14 } },
        "rightArm": { "rotateX": { "amplitude": 0.3, "phaseOffset": 0 } },
        "torso": { "rotateX": { "offset": 0.1 } }
      }
    },
    "run": {
      "type": "bob",
      "amplitude": 0.3,
      "speed": 6.0,
      "parts": {
        "leftLeg": { "rotateX": { "amplitude": 0.9, "phaseOffset": 0 } },
        "rightLeg": { "rotateX": { "amplitude": 0.9, "phaseOffset": 3.14 } },
        "leftArm": { "rotateX": { "amplitude": 0.5, "phaseOffset": 3.14 } },
        "rightArm": { "rotateX": { "amplitude": 0.5, "phaseOffset": 0 } },
        "torso": { "rotateX": { "offset": 0.15 } }
      }
    },
    "attack_melee": {
      "type": "swing",
      "duration": 0.4,
      "armRotation": 90,
      "parts": {
        "rightArm": {
          "rotateX": { "from": 0, "to": 1.2, "easing": "easeOutQuad" },
          "rotateZ": { "from": 0, "to": -0.3, "easing": "easeOutQuad" }
        },
        "weapon": {
          "rotateX": { "from": 0, "to": 0.8, "easing": "easeOutQuad" }
        },
        "torso": {
          "rotateY": { "from": 0, "to": 0.2, "easing": "easeOutQuad" }
        }
      }
    },
    "attack_ranged": {
      "type": "recoil",
      "duration": 0.2,
      "kickback": 0.1,
      "parts": {
        "rightArm": {
          "rotateX": { "from": 0, "to": -0.5, "easing": "easeOutElastic" }
        },
        "weapon": {
          "translateZ": { "from": 0, "to": -0.15, "easing": "easeOutElastic" },
          "rotateX": { "from": 0, "to": -0.2, "easing": "easeOutElastic" }
        }
      }
    },
    "attack_lunge": {
      "type": "lunge",
      "duration": 0.25,
      "parts": {
        "torso": {
          "rotateX": { "from": 0, "to": 0.3, "easing": "easeInQuad" },
          "translateZ": { "from": 0, "to": 0.5, "easing": "easeInQuad" }
        },
        "rightArm": {
          "rotateX": { "from": 0, "to": 1.5, "easing": "easeOutQuad" }
        },
        "leftArm": {
          "rotateX": { "from": 0, "to": 1.5, "easing": "easeOutQuad" }
        }
      }
    },
    "attack_chargeUp": {
      "type": "charge",
      "duration": 0.8,
      "parts": {
        "weapon": {
          "emissiveIntensity": { "from": 0.2, "to": 1.5, "easing": "linear" },
          "scale": { "from": 1.0, "to": 1.1, "easing": "easeInQuad" }
        },
        "torso": {
          "rotateX": { "from": 0, "to": -0.1, "easing": "easeInQuad" }
        }
      }
    },
    "death": {
      "type": "ragdoll",
      "duration": 1.0,
      "gravity": 9.8,
      "parts": {
        "torso": { "rotateX": { "to": 1.57 }, "translateY": { "to": -0.5 } },
        "head": { "rotateX": { "to": -0.5 } },
        "leftArm": { "rotateZ": { "to": 1.2 } },
        "rightArm": { "rotateZ": { "to": -1.2 } },
        "leftLeg": { "rotateX": { "to": 0.3 } },
        "rightLeg": { "rotateX": { "to": 0.3 } }
      }
    },
    "stagger": {
      "type": "knockback",
      "duration": 0.3,
      "distance": 0.5,
      "parts": {
        "torso": { "rotateX": { "to": -0.2, "easing": "easeOutElastic" } },
        "head": { "rotateX": { "to": 0.3, "easing": "easeOutElastic" } }
      }
    },
    "hit_react": {
      "type": "flinch",
      "duration": 0.15,
      "parts": {
        "torso": { "rotateX": { "amplitude": 0.1, "easing": "easeOutElastic" } },
        "head": { "rotateX": { "amplitude": 0.15, "easing": "easeOutElastic" } }
      }
    }
  },

