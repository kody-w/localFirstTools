    "idle": {
      "sway": true,
      "swaySpeed": 1.0,
      "swayAmount": 0.03,
      "shieldPulse": true,
      "parts": {
        "shield": {
          "pulse": { "min": 0.9, "max": 1.1, "speed": 3.0 },
          "opacity": { "min": 0.4, "max": 0.6, "speed": 2.0 }
        },
        "visor": { "glow": { "min": 0.6, "max": 1.0, "speed": 2.5 } },
        "cape": { "wave": { "amplitude": 0.08, "speed": 1.2 } }
      }
    },
    "walk": {
      "bob": true,
      "bobSpeed": 3.0,
      "bobAmount": 0.08,
      "legSwing": true,
      "legSwingAmount": 0.5,
      "armSwing": true,
      "armSwingAmount": 0.25,
      "parts": {
        "cape": { "flow": { "amplitude": 0.15, "speed": 2.5 } },
        "shield": { "bob": { "amplitude": 0.05 } }
      }
    },
    "attack": {
      "slash": true,
      "duration": 0.4,
      "parts": {
        "rightArm": {
          "windUp": { "rotateX": -1.0, "rotateZ": 0.4, "duration": 0.15 },
          "slash": { "rotateX": 1.2, "rotateZ": -0.2, "easing": "easeOutQuad" }
        },
        "blade": {
          "trail": true,
          "trailColor": "#6644ff"
        },
        "torso": { "twist": { "rotateY": 0.25 } },
        "shield": { "brace": { "rotateY": -0.3 } }
      }
    },
    "shieldBreak": {
      "flash": true,
      "duration": 0.3,
      "parts": {
        "shield": {
          "shatter": true,
          "particles": { "count": 20, "color": "#6644ff" }
        }
      }
    },
    "death": {
      "explode": true,
      "duration": 1.0,
      "parts": {
        "cape": { "dissolve": true },
        "armor": { "shatter": true, "delay": 0.2 }
      }
    }
  },
