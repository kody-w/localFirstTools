      "displayScroll": { "part": "statusDisplay", "type": "uv-scroll", "speed": 0.5 },
      "beaconBlink": { "part": "antennaLight", "type": "blink", "interval": 1.5 }
    },
    "spawning": {
      "doorsOpen": { "parts": ["launchBayDoor1", "launchBayDoor2"], "type": "translate", "axis": "x", "amount": 1.5, "duration": 0.5 },
      "assemblyActive": { "parts": ["assemblyArm1", "assemblyArm2"], "type": "rotate", "axis": "x", "amount": 30, "speed": 2.0 },
      "weldSparks": { "parts": ["assemblyHead1", "assemblyHead2"], "type": "particles", "count": 10, "color": "#ffff00" },
      "conveyorMove": { "part": "conveyorBelt", "type": "uv-scroll", "speed": 2.0 },
      "coreIntensify": { "part": "energyCore", "type": "emissive", "intensity": 3.0 },
      "bayLightsGreen": { "parts": ["launchBayLight1", "launchBayLight2"], "type": "emissive", "color": "#00ff00", "intensity": 3.0 }
    },
    "damaged": {
      "sparks": { "type": "particles", "count": 25, "colors": ["#ffaa00", "#ffffff"] },
      "smoke": { "type": "particles", "count": 15, "color": "#333333", "rise": true },
      "flicker": { "parts": ["energyCore", "statusDisplay"], "type": "flicker", "speed": 8 },
      "alarmLight": { "part": "antennaLight", "type": "blink", "interval": 0.2, "color": "#ff0000" }
    },
    "destroyed": {
      "explosion": { "type": "particles", "count": 150, "colors": ["#ff4400", "#ffaa00", "#00ffff", "#ffffff"] },
      "collapse": { "type": "physics", "gravity": true, "duration": 3.0 },
      "debris": { "type": "spawn", "count": 25, "lifetime": 5.0 },
      "coreOverload": { "part": "energyCore", "type": "explode", "force": 15, "color": "#00ffff" }
    }
  },
