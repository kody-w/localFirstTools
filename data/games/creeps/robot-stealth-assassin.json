      "bladeIdle": { "parts": ["monoBladeLeft", "monoBladeRight"], "type": "emissive", "min": 1.5, "max": 2.5, "speed": 2.0 },
      "empHum": { "part": "empCore", "type": "emissive", "min": 1.0, "max": 2.5, "speed": 1.5 }
    },
    "move": {
      "sprint": { "part": "torsoSlim", "type": "rotate", "axis": "x", "amount": 20 },
      "armPump": { "parts": ["upperArmLeft", "forearmLeft"], "type": "rotate", "axis": "x", "min": -30, "max": 30, "speed": 3.0 },
      "legCycle": { "parts": ["thighLeft", "calfLeft"], "type": "walk-ik", "speed": 3.0 },
      "shadowTrail": { "type": "particles", "count": 5, "color": "#1a1a2a", "trail": true, "opacity": 0.3 }
    },
    "cloak": {
      "fadeOut": { "type": "opacity", "all": true, "target": 0.1, "duration": 0.5 },
      "cloakActivate": { "part": "cloakGenerator", "type": "emissive", "intensity": 5.0, "duration": 0.3 },
      "shimmerEffect": { "type": "distortion", "intensity": 0.5 },
      "footstepSilence": { "type": "sound", "volume": 0 }
    },
    "attack": {
      "bladeExtend": { "parts": ["monoBladeLeft", "monoBladeRight"], "type": "scale", "axis": "y", "amount": 1.5, "duration": 0.1 },
      "slashLeft": { "parts": ["upperArmLeft", "forearmLeft", "monoBladeLeft"], "type": "rotate", "axis": "x", "amount": -120, "duration": 0.15 },
      "slashRight": { "parts": ["upperArmRight", "forearmRight", "monoBladeRight"], "type": "rotate", "axis": "x", "amount": -120, "duration": 0.15, "delay": 0.1 },
      "bladeTrail": { "type": "trail", "color": "#ffffff", "width": 0.02, "duration": 0.3 },
      "impactSpark": { "type": "particles", "count": 15, "color": "#ffffff", "onHit": true }
    },
    "emp": {
      "coreOverload": { "part": "empCore", "type": "emissive", "intensity": 8.0, "duration": 0.5 },
      "empPulse": { "type": "sphere", "color": "#4400ff", "radius": 6, "opacity": 0.5, "expand": true },
      "staticDischarge": { "type": "particles", "count": 50, "colors": ["#4400ff", "#ffffff"], "spread": 6 },
      "systemDisrupt": { "type": "screen-effect", "static": true, "duration": 0.5 }
    },
    "damaged": {
      "cloakGlitch": { "type": "opacity", "flicker": true, "speed": 10 },
      "sparks": { "type": "particles", "count": 15, "colors": ["#4400ff", "#ffffff"] },
      "stagger": { "part": "torsoSlim", "type": "translate", "axis": "z", "amount": -0.2 }
    },
    "destroyed": {
      "cloakFailure": { "type": "opacity", "target": 1.0, "duration": 0.2 },
      "bladeShatter": { "parts": ["monoBladeLeft", "monoBladeRight"], "type": "particles", "count": 20, "color": "#ffffff" },
      "empOverload": { "part": "empCore", "type": "explode", "force": 8, "color": "#4400ff" },
      "collapse": { "type": "ragdoll", "parts": "all" },
      "finalSpark": { "type": "particles", "count": 40, "colors": ["#4400ff", "#ffffff", "#ff0044"], "spread": 3 }
    }
  },
