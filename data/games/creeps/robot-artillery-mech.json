    "idle": {
      "corePulse": { "part": "powerCoreGlow", "type": "emissive", "min": 2.0, "max": 3.0, "speed": 1.0 },
      "beaconFlash": { "part": "beaconLight", "type": "blink", "interval": 2.0 },
      "laserScan": { "part": "targetingLaser", "type": "rotate", "axis": "y", "min": -30, "max": 30, "speed": 0.5 },
      "turretSweep": { "part": "turretBody", "type": "rotate", "axis": "y", "min": -20, "max": 20, "speed": 0.1 }
    },
    "deploy": {
      "anchorExtend": { "parts": ["anchorFrontLeft", "anchorFrontRight", "anchorRearLeft", "anchorRearRight"], "type": "translate", "axis": "y", "amount": -0.5, "duration": 0.5 },
      "frameStabilize": { "part": "baseFrame", "type": "translate", "axis": "y", "amount": 0.1, "duration": 0.3 },
      "racksRaise": { "parts": ["missileRackLeft", "missileRackRight"], "type": "rotate", "axis": "x", "amount": -30, "duration": 0.5 },
      "deploySound": { "type": "sound", "id": "mech-deploy" }
    },
    "attack": {
      "targetLock": { "part": "targetingLaser", "type": "beam", "color": "#ff0000", "toTarget": true, "duration": 1.0 },
      "rackRecoil": { "parts": ["missileRackLeft", "missileRackRight"], "type": "translate", "axis": "z", "amount": -0.1, "duration": 0.1 },
      "missileLaunch": { "type": "projectile", "origin": ["missileL1", "missileR1"], "color": "#ff4400", "tracking": true, "arc": true },
      "smokeTrail": { "type": "particles", "count": 40, "color": "#888888", "trail": true },
      "exhaustBlast": { "parts": ["exhaustPortLeft", "exhaustPortRight"], "type": "particles", "count": 10, "color": "#ff8800" }
    },
    "orbitalStrike": {
      "beaconCharge": { "part": "beaconLight", "type": "emissive", "intensity": 8.0, "duration": 2.0 },
      "beaconBeam": { "type": "beam", "origin": "beaconLight", "color": "#00ffff", "width": 0.5, "upward": true },
      "targetDesignate": { "type": "circle", "color": "#ff0000", "radius": 5, "pulse": true, "ground": true },
      "orbitalImpact": { "type": "beam", "color": "#ffffff", "width": 3, "downward": true, "delay": 2.0 },
      "devastation": { "type": "explosion", "force": 50, "color": "#ffffff", "radius": 8 }
    },
    "damaged": {
      "sparks": { "type": "particles", "count": 35, "colors": ["#ffaa00", "#ffffff"] },
      "rackDamage": { "parts": ["missileRackLeft", "missileRackRight"], "type": "shake", "intensity": 0.1 },
      "beaconFlicker": { "part": "beaconLight", "type": "flicker", "speed": 12 }
    },
    "destroyed": {
      "missileDetonate": { "parts": ["missileL1", "missileL2", "missileL3", "missileL4", "missileR1", "missileR2", "missileR3", "missileR4"], "type": "explode", "force": 10, "color": "#ff4400", "sequence": true, "delay": 0.1 },
      "coreOverload": { "part": "powerCoreGlow", "type": "emissive", "intensity": 10.0, "duration": 0.5 },
      "massiveExplosion": { "type": "explode", "force": 30, "color": "#ff8800" },
      "debris": { "type": "physics", "gravity": true, "parts": ["turretBody", "missileRackLeft", "missileRackRight", "targetingArray"] },
      "fireball": { "type": "particles", "count": 200, "colors": ["#ff4400", "#ffaa00", "#ffffff"], "spread": 10 },
      "crater": { "type": "decal", "texture": "explosion-crater", "size": 6 }
    }
  },
