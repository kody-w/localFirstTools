      "chamberBob": { "parts": ["larvalChamber1", "larvalChamber2", "larvalChamber3", "larvalChamber4"], "type": "translate", "axis": "y", "min": -0.05, "max": 0.05, "speed": 1.5 }
    },
    "spawn": {
      "chamberContract": { "parts": ["larvalChamber1", "larvalChamber2"], "type": "scale", "amount": 0.5, "duration": 0.5, "return": 2.0 },
      "canalOpen": { "parts": ["birthCanal1", "birthCanal2"], "type": "scale", "amount": 1.5, "emissive": 3.0, "duration": 0.3 },
      "birthFluid": { "type": "particles", "count": 15, "color": "#88ff44", "position": ["birthCanal1", "birthCanal2"] },
      "spawnCreep": { "type": "spawn", "model": "hostile-swarmer", "count": 2, "position": ["birthCanal1", "birthCanal2"] }
    },
    "damaged": {
      "recoil": { "part": "bodyBloated", "type": "translate", "axis": "z", "amount": -0.2, "duration": 0.2 },
      "ichorBurst": { "type": "particles", "count": 30, "colors": ["#44ff00", "#ff4444", "#4a3a3a"] },
      "chamberRupture": { "parts": ["larvalChamber1", "larvalChamber2", "larvalChamber3", "larvalChamber4"], "type": "flicker", "speed": 10, "duration": 0.3 }
    },
    "destroyed": {
      "finalBirth": { "type": "spawn", "model": "hostile-swarmer", "count": 6, "burst": true },
      "bodyExplode": { "type": "explode", "force": 12, "color": "#88ff44" },
      "ichorWave": { "type": "particles", "count": 100, "colors": ["#44ff00", "#88ff44", "#ff4444", "#4a3a3a"], "spread": 6 },
      "acidPool": { "type": "hazard", "shape": "circle", "color": "#88ff44", "radius": 4, "damage": 8, "duration": 8 },
      "debrisScatter": { "parts": ["carapaceTop", "legFrontLeft", "legFrontRight", "legMidLeft", "legMidRight"], "type": "physics", "force": 10 }
    }
