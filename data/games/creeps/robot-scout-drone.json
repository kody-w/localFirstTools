      "antennaBlink": { "parts": ["antennaTipLeft", "antennaTipRight"], "type": "blink", "interval": 0.5, "stagger": 0.25 }
    },
    "move": {
      "tiltForward": { "part": "hullCore", "type": "rotate", "axis": "x", "amount": 15 },
      "thrusterBoost": { "parts": ["thrusterGlowLeft", "thrusterGlowRight"], "type": "scale", "amount": 1.5, "emissive": 4.0 },
      "trail": { "type": "particles", "count": 5, "color": "#00ffff", "trail": true }
    },
    "attack": {
      "eyeCharge": { "part": "eyeLens", "type": "emissive", "intensity": 5.0, "duration": 0.3 },
      "scanBurst": { "part": "sensorDome", "type": "rotate", "speed": 10.0, "duration": 0.5 },
      "dataBeam": { "type": "beam", "origin": "eyeLens", "color": "#ff4400", "width": 0.05 }
    },
    "damaged": {
      "sparks": { "type": "particles", "count": 15, "colors": ["#ffaa00", "#ffffff", "#00ffff"] },
      "flicker": { "parts": ["eyeLens", "sensorDome"], "type": "flicker", "speed": 12 },
      "smoke": { "type": "particles", "count": 8, "color": "#444444", "rise": true }
    },
    "destroyed": {
      "explosion": { "type": "explode", "force": 8, "color": "#00ffff" },
      "debris": { "type": "physics", "gravity": true, "parts": ["hullPlateTop", "antennaLeft", "antennaRight"] },
      "sparks": { "type": "particles", "count": 40, "colors": ["#00ffff", "#ffffff", "#ffaa00"], "spread": 3 }
    }
