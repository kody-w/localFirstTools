      "sensorSpin": { "part": "sensorDome", "type": "rotate", "axis": "y", "speed": 1.5 },
      "ringPulse": { "part": "sensorRing", "type": "emissive", "min": 1.0, "max": 2.0, "speed": 3.0 },
