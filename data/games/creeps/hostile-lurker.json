    },
    "stealth": {
      "fadeCloak": { "part": "shadowCloak", "type": "opacity", "target": 0.9, "duration": 0.5 },
      "bodyFade": { "part": "bodyMain", "type": "opacity", "target": 0.3, "duration": 0.5 },
      "eyeDim": { "part": "eyeMain", "type": "emissive", "target": 1.0 },
      "lumeDim": { "parts": ["bioLumeStripe1", "bioLumeStripe2", "bioLumeStripe3"], "type": "emissive", "target": 0.5 }
    },
    "move": {
      "legScuttle": { "parts": ["legLeft1", "legRight2"], "type": "rotate", "axis": "z", "min": 30, "max": 60, "speed": 4.0 },
      "legScuttleAlt": { "parts": ["legLeft2", "legRight1"], "type": "rotate", "axis": "z", "min": -60, "max": -30, "speed": 4.0, "phase": 0.5 },
      "bodyGlide": { "part": "bodyMain", "type": "translate", "axis": "y", "min": -0.05, "max": 0.05, "speed": 4.0 },
      "shadowTrail": { "type": "particles", "count": 3, "color": "#4400aa", "trail": true, "opacity": 0.5 }
    },
    "attack": {
      "ambushReveal": { "parts": ["bodyMain", "shadowCloak"], "type": "opacity", "target": 1.0, "duration": 0.1 },
      "lumeFlare": { "parts": ["bioLumeStripe1", "bioLumeStripe2", "bioLumeStripe3"], "type": "emissive", "intensity": 5.0, "duration": 0.2 },
      "clawStrike": { "parts": ["clawArmLeft", "clawLeft"], "type": "rotate", "axis": "x", "amount": -60, "duration": 0.15, "return": 0.2 },
      "clawStrikeAlt": { "parts": ["clawArmRight", "clawRight"], "type": "rotate", "axis": "x", "amount": -60, "duration": 0.15, "delay": 0.1, "return": 0.2 },
      "stingerLash": { "parts": ["tailSegment1", "tailSegment2", "tailStinger"], "type": "rotate", "axis": "x", "amount": 45, "duration": 0.2 }
    },
    "damaged": {
      "screech": { "type": "sound", "id": "lurker-screech" },
      "cloakDisrupt": { "part": "shadowCloak", "type": "flicker", "speed": 15, "duration": 0.5 },
      "ichorSpray": { "type": "particles", "count": 20, "colors": ["#4400aa", "#ff00ff"] }
    },
    "destroyed": {
      "shadowBurst": { "type": "particles", "count": 60, "color": "#4400aa", "spread": 4 },
      "lumeFadeout": { "parts": ["bioLumeStripe1", "bioLumeStripe2", "bioLumeStripe3", "eyeMain"], "type": "emissive", "target": 0, "duration": 1.0 },
      "collapse": { "type": "ragdoll", "duration": 1.5 },
      "voidDissipate": { "type": "particles", "count": 40, "colors": ["#0a0a1a", "#4400aa", "#ff00ff"], "rise": true }
    }
