    },
    "move": {
      "hover": { "part": "voidCore", "type": "translate", "axis": "y", "min": -0.3, "max": 0.3, "speed": 0.5 },
      "tentacleReach": { "parts": ["tentacleUpper1", "tentacleUpper2"], "type": "rotate", "axis": "x", "min": -20, "max": 0, "speed": 1.0 },
      "spaceWarp": { "type": "distortion", "intensity": 0.3, "radius": 8 }
    },
    "attack": {
      "eyeCharge": { "part": "singularityEye", "type": "emissive", "target": 10.0, "duration": 1.0 },
      "voidBeam": { "type": "beam", "origin": "singularityEye", "color": "#ff00ff", "width": 0.5, "duration": 2.0, "damage": 100 },
      "tentacleSlam": { "parts": ["tentacleUpper1", "tentacleUpper2"], "type": "rotate", "axis": "z", "amount": 60, "duration": 0.3 },
      "riftStrike": { "type": "teleport-strike", "positions": 3, "damage": 80 },
      "dimensionTear": { "type": "spawn", "model": "void-spawn", "count": 2, "positions": ["dimensionRift1", "dimensionRift2"] }
    },
    "enrage": {
      "realityShatter": { "part": "eventHorizon", "type": "scale", "amount": 1.5, "duration": 2.0 },
      "allEyesOpen": { "type": "spawn-eyes", "count": 6, "orbit": true },
      "voidStorm": { "type": "particles", "count": 100, "colors": ["#4400ff", "#ff00ff"], "spiral": true },
      "tentacleMultiply": { "type": "spawn-parts", "template": "tentacle", "count": 4 }
    },
    "damaged": {
      "phaseFlicker": { "parts": ["voidCore", "eventHorizon"], "type": "opacity", "min": 0.3, "max": 1.0, "speed": 10, "duration": 0.5 },
      "voidBleed": { "type": "particles", "count": 40, "colors": ["#4400ff", "#ff00ff", "#00ffff"] },
      "realityGlitch": { "type": "chromatic-aberration", "intensity": 0.5, "duration": 0.3 }
    },
    "destroyed": {
      "singularityCollapse": { "part": "voidCore", "type": "scale", "amount": 0.1, "duration": 2.0 },
      "dimensionImplosion": { "type": "implosion", "radius": 15, "duration": 1.5 },
      "realityRestore": { "type": "shockwave", "color": "#ffffff", "radius": 20 },
      "voidScatter": { "type": "particles", "count": 300, "colors": ["#4400ff", "#ff00ff", "#00ffff", "#ffffff"], "spread": 15 },
      "tentacleDisintegrate": { "parts": ["tentacleUpper1", "tentacleUpper2", "tentacleMid1", "tentacleMid2"], "type": "dissolve", "duration": 2.0 }
    }
