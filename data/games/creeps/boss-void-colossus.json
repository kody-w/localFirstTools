      "riftFlicker": { "parts": ["dimensionRift1", "dimensionRift2"], "type": "opacity", "min": 0.5, "max": 1.0, "speed": 5.0 },
      "orbitSlow": { "parts": ["floatingDebris1", "floatingDebris2", "floatingDebris3"], "type": "orbit", "radius": 5, "speed": 0.2 },
