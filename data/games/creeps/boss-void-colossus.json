      "ringRotate": { "part": "eyeRing1", "type": "rotate", "axis": "z", "speed": 30, "continuous": true },
      "ringRotateReverse": { "part": "eyeRing2", "type": "rotate", "axis": "x", "speed": -20, "continuous": true },
      "tentacleWrithe": { "parts": ["tentacleUpper1", "tentacleUpper2", "tentacleMid1", "tentacleMid2", "tentacleLower1", "tentacleLower2"], "type": "rotate", "axis": "z", "min": -15, "max": 15, "speed": 0.5, "stagger": 0.3 },
