    },
    "move": {
      "pitchForward": { "part": "fuselageMain", "type": "rotate", "axis": "x", "amount": 15 },
      "afterburnerBoost": { "part": "rearThrusterGlow", "type": "scale", "amount": 2.0, "emissive": 5.0 },
      "bankTurn": { "part": "fuselageMain", "type": "rotate", "axis": "z", "toDirection": true, "max": 30 },
      "engineTrail": { "type": "particles", "count": 10, "colors": ["#00ffff", "#ff8800"], "trail": true }
    },
    "attack": {
      "cannonSpinUp": { "parts": ["rotaryCannonLeft", "rotaryCannonRight"], "type": "rotate", "axis": "z", "speed": 20, "duration": 0.5 },
      "muzzleFlash": { "type": "particles", "count": 20, "color": "#ffaa00", "position": ["rotaryCannonLeft", "rotaryCannonRight"] },
      "tracers": { "type": "projectile", "count": 10, "color": "#ffaa00", "speed": 30, "spread": 2 },
      "missilelaunch": { "type": "projectile", "origin": ["missileLeft1", "missileRight1"], "color": "#ff4400", "tracking": true, "trail": true },
      "smokeTrail": { "type": "particles", "count": 30, "color": "#888888", "trail": true }
    },
    "damaged": {
      "sparks": { "type": "particles", "count": 40, "colors": ["#ffaa00", "#ffffff"] },
      "smoke": { "type": "particles", "count": 15, "color": "#333333", "rise": true },
      "engineStutter": { "parts": ["vtolGlowLeft", "vtolGlowRight"], "type": "flicker", "speed": 8 },
      "wobble": { "part": "fuselageMain", "type": "rotate", "axis": "z", "amount": 15, "speed": 5 }
    },
    "destroyed": {
      "engineExplosion": { "parts": ["vtolEngineLeft", "vtolEngineRight"], "type": "explode", "force": 15, "color": "#ff4400" },
      "wingBreakoff": { "parts": ["wingLeft", "wingRight"], "type": "physics", "force": 10, "spin": true },
      "fireball": { "type": "particles", "count": 100, "colors": ["#ff4400", "#ffaa00", "#ffffff"], "spread": 6 },
      "spiralDescent": { "part": "fuselageMain", "type": "physics", "spin": true, "gravity": true },
      "smokePlume": { "type": "particles", "count": 80, "color": "#222222", "rise": true, "duration": 8.0 },
      "groundImpact": { "type": "explosion", "delay": 2.0, "force": 30, "color": "#ff4400" }
    }
