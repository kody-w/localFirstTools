# ===========================================
# NeuAI CRM Data Mesh - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# See docs/ONBOARDING-GUIDE.md for detailed setup instructions.

# ----- Salesforce Configuration -----
# Get these from: Setup > App Manager > Your Connected App
SALESFORCE_CLIENT_ID=3MVG9...your_consumer_key
SALESFORCE_CLIENT_SECRET=your_consumer_secret
SALESFORCE_USERNAME=your.email@company.com
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token

# Salesforce Domain
# - Production: login.salesforce.com
# - Sandbox: test.salesforce.com
# - Custom: yourcompany.my.salesforce.com
SALESFORCE_DOMAIN=login.salesforce.com

# Salesforce API Version
SALESFORCE_API_VERSION=v59.0

# ----- Dynamics 365 Configuration -----
# Get these from: Azure Portal > Azure AD > App registrations
DYNAMICS_CLIENT_ID=12345678-1234-1234-1234-123456789abc
DYNAMICS_CLIENT_SECRET=your_client_secret_value
DYNAMICS_TENANT_ID=abcdefgh-1234-5678-9abc-def012345678

# Get from: Power Platform Admin Center > Environments
# Examples by region:
# - North America: https://yourorg.crm.dynamics.com
# - EMEA: https://yourorg.crm4.dynamics.com
# - APAC: https://yourorg.crm5.dynamics.com
DYNAMICS_ENVIRONMENT_URL=https://yourorg.crm.dynamics.com
DYNAMICS_API_VERSION=v9.2

# ----- Server Configuration -----
HOST=0.0.0.0
PORT=8080
DEBUG=false

# ----- Logging -----
LOG_LEVEL=INFO

# ----- CORS -----
# Comma-separated origins, or * for all (dev only)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ----- Data Persistence -----
DATA_DIR=./data

# ----- Feature Flags -----
ENABLE_AI_QUERIES=true
ENABLE_LIVE_SYNC=false

# ----- Duplicate Detection -----
DUPLICATE_THRESHOLD=0.8

# ----- Rate Limiting -----
SALESFORCE_RATE_LIMIT=100
DYNAMICS_RATE_LIMIT=50
RATE_LIMIT_WINDOW_SECONDS=60

# ----- Retry Configuration -----
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1
